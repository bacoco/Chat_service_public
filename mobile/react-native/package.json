{
  "name": "MiChaMobile",
  "version": "1.0.0",
  "private": true,
  "description": "MiCha - Minimalist Chatbot Mobile Application",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "postinstall": "patch-package",
    "pods": "cd ios && pod install",
    "clean": "cd android && ./gradlew clean && cd ../ios && xcodebuild clean",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace MiChaMobile.xcworkspace -scheme MiChaMobile -configuration Release"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.72.7",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "react-native-screens": "^3.29.0",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-gesture-handler": "^2.14.0",
    "react-native-reanimated": "^3.6.1",
    "react-native-vector-icons": "^10.0.3",
    "react-native-webview": "^13.6.3",
    "react-native-share": "^10.0.2",
    "react-native-receive-sharing-intent": "^2.0.0",
    "@react-native-async-storage/async-storage": "^1.21.0",
    "react-native-keychain": "^8.1.2",
    "@react-native-ml-kit/text-recognition": "^1.3.0",
    "@react-native-camera-roll/camera-roll": "^7.4.0",
    "react-native-image-picker": "^5.7.0",
    "react-native-svg": "^14.1.0",
    "@reduxjs/toolkit": "^2.0.1",
    "react-redux": "^9.0.4",
    "redux-persist": "^6.0.0",
    "react-native-mmkv": "^2.11.0",
    "react-native-url-polyfill": "^2.0.0",
    "react-native-get-random-values": "^1.10.0",
    "react-native-uuid": "^2.0.1",
    "@react-native-community/netinfo": "^11.2.1",
    "react-native-device-info": "^10.12.0",
    "react-native-splash-screen": "^3.3.0",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-haptic-feedback": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.72.2",
    "@react-native/metro-config": "^0.72.11",
    "@tsconfig/react-native": "^3.0.0",
    "@types/react": "^18.0.24",
    "@types/react-native": "^0.72.8",
    "@types/react-native-vector-icons": "^6.4.18",
    "@types/jest": "^29.2.1",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.76.8",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "5.0.4",
    "patch-package": "^8.0.0",
    "@types/react-native-share": "^3.3.8",
    "detox": "^20.14.8"
  },
  "engines": {
    "node": ">=16"
  }
}